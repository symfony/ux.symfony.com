{%- props -%}
{%- set style = html_cva(
    base: 'hover:bg-muted/50 data-[state=selected]:bg-muted border-b transition-colors',
    variants: {},
    compoundVariants: []
) -%}

<tr
        class="{{ style.apply({}, attributes.render('class'))|tailwind_merge }}"
        {{ attributes.defaults({}).without('class') }}
>
    {% block content %}{% endblock %}
</tr>
